

@model IEnumerable<inandout.Models.Expense>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Expenses List</h2>
        </div>
        <div class="col-6 textright">
            <a asp-controller="Expenses" asp-action="Create" class="btn btn-primary">Create New Expenses</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expenditure
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Update/Delete
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                <tr>
                    <td width="35%">@expense.Expenditure</td>
                    <td width="35%">@expense.Amount</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Expenses" asp-action="Update" asp-route-Id="@expense.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Expenses" asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-danger mx-1">Delete</a>

                        </div>
                       

                    </td>

                </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Expenses Created Yet</p>
    }

</div>



