

@model IEnumerable<inandout.Models.ExpenseCategory>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Expense Category</h2>
        </div>
        <div class="col-6 textright">
            <a asp-controller="ExpenseCategories" asp-action="Create" class="btn btn-primary">Create New Expense Category</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        ExpenseName
                    </th>


                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="35%">@expense.ExpenseName</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="ExpenseCategories" asp-action="Update" asp-route-Id="@expense.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="ExpenseCategories" asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-danger mx-1">Delete</a>

                            </div>


                        </td>

                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Expenses Created Yet</p>
    }

</div>



